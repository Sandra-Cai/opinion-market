        "10s",
        "30s",
        "1m",
        "5m",
        "15m",
        "30m",
        "1h",
        "2h",
        "1d"
      ]
    },
    "templating": {
      "list": [
        {
          "name": "environment",
          "type": "query",
          "query": "production,staging,development",
          "current": {
            "value": "production",
            "text": "production"
          }
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "name": "Deployments",
          "datasource": "Prometheus",
          "expr": "changes(app_version[1m]) > 0",
          "iconColor": "green"
        },
        {
          "name": "Errors",
          "datasource": "Prometheus",
          "expr": "rate(http_requests_total{status=~\"5..\"}[5m]) > 0.1",
          "iconColor": "red"
        }
      ]
    },
    "refresh": "30s",
